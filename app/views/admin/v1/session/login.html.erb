<div class="container">
    <div class="row">
    	<div class="jumbotron" style="margin-top: 20%;">
    		<h1>数据服务平台 Web API</h1> 
    		<p class="text-info"> Copyright (c) 2018 CSCS Data Platform</p>
    	</div>
	<%= render 'shared/error_msg' %>
    </div>
    <div class="row">
    	<div class="col-md-3 col-sm-3 col-md-offset-2 col-sm-offset-2">
        	<%= image_tag("restapi.png", size: "150x120", class: 'img-responsive img-center') %>
	    </div>

	    <div class="col-md-6 col-sm-6">
			<%= form_for :session, :html=>{class: 'form-horizontal'}, remote:true do |f|  %>
       			<div class="form-group"> 
       			    <%= f.label :email, class: 'col-md-2  col-sm-2 control-label' %>
       			    <div class="col-md-5 col-sm-5">
       			        <%= f.text_field :email, class: 'form-control' %>
       			    </div>     
       			</div>
       			<div class="form-group">
			    <%= f.label :password, class: 'col-md-2 col-sm-2 control-label' %>
       			    <div class="col-md-5 col-sm-5">            
       			        <%= f.password_field :password, class: 'form-control' %>
       			    </div> 
       			</div>
       			<div class="form-group"> 
       			    <div class="col-md-6 col-sm-6 col-md-offset-2 col-sm-offset-2"> 
       			        <%= f.submit 'Login', class: 'btn btn-success' %>
                        <a href="mailto:Data_Platform@chinacscs.com?subject=I need an account." class="btn btn-success">I Don't Have Account</a>
       			    </div>
       			</div>
       			<% end %>
	    </div>
    </div>

</div>
